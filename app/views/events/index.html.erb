<h1>Events</h1>
<body>
  <table>
    <thead>
      <tr>
        <th>Brewery</th>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.brewery.name, event.brewery  %></td>
        <td><%= link_to event.name, event %></td>
        <td><%= event.description %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @events %>
  <%= page_entries_info @events %>
</body>
