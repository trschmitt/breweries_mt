
<div class="jumbotron text-center">
    <h1><%= @event.brewery.name %> Event</h1>
    <h2><%= @event.name %></h2>
    <%= link_to 'Back', events_path, class: "btn btn-primary"%>
</div>
<div class="container">


  <h3>Starts: <%= @event.start_at.strftime("%Y-%m-%d %I:%M %p") %></h3>
  <h3>Ends: <%= @event.end_at.strftime("%Y-%m-%d %I:%M %p") %></h3>

  <p>Description: <%= @event.description %></p>

  <h4>Sales: <%= @event.sales %></h4>
</div>
