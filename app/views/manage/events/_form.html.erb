
  <%= form_with(model: [ :manage, event ], local: true) do |form| %>
    <% if event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <p>
        <%= form.label :name %>
        <%= form.text_field :name, id: :event_name %>
      </p>
    </div>

    <div class="field">
      <p>
        <%= form.label :description %>
        <%= form.text_area :description, id: :event_description %>
      </p>
    </div>

    <div class="field">
      <p>
        <%= form.label :sales %>
        <%= form.text_field :sales, id: :event_sales %>
      </p>
    </div>

    <div class="field">
      <p>
        <%= form.label :start_at %>
        <%= form.datetime_local_field :start_at, id: :event_start_at %>
      </p>
    </div>

    <div class="field">
      <p>
        <%= form.label :end_at %>
        <%= form.datetime_local_field :end_at, id: :event_end_at %>
      </p>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
